<% layout("layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-3">
                <h1>Here is the detailed view of your listing:</h1>
            </div>
            <div class="card col-6 offset-3 listing-card">
                <i>Owned By - <b><%=listing.owner.username %></b></i>
                <img src="<%=listing.image.url%>" class="card-img-top" alt="listing image">
                <div class="card-body mt-3">
                    <p class="card-text">
                        <b>
                            <%=listing.title %>
                        </b><br>
                        <%=listing.desc %> <br>
                            &#8377; <%=listing.price.toLocaleString("en-IN")%> <br>
                                <%=listing.location %>
                                    , <%=listing.country %>
                    </p>
                </div>
            </div>

            <div class="show_btns">
                <a href="http://localhost:8080/listings" class="btn btn-dark offset-3 col-1">back</a><br><br>
                <a href="http://localhost:8080/listings/<%=listing._id%>/edit" class="btn btn-dark edit_btn col-1 offset-3 ">Edit</a><br><br>
                <form method="post" action="/listings/<%=listing._id%>?_method=DELETE" ><button class="btn btn-dark dlt_btn">delete</button>
                </form>
                
            </div>
            
            
            <div class="review col-8 offset-3 mb-3">
                <hr>
                <h4>Leave a Review</h4>
                <form method="post" action="/listings/<%=listing._id %>/reviews" novalidate class="needs-validation">
                    <div class="col-3">
                        <!-- <label for="rating" class="form-label">Rating</label>
                        <input name="review[rating]" min="1" max="5" class="form-range" type="range"> -->
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>

                    </div>
                    <div>
                        <label for="comment" class="form-label">Comment:</label>
                        <textarea name="review[comment]" class="form-control" id="" cols="30" rows="5" required></textarea>
                        <div class="invalid-feedback">add a review to submit</div>
                    </div>
                    <div>
                        <button class="btn btn-outline-dark mt-3">Submit</button>
                    </div>
                </form>

                <hr>
                <div class="row">
                    <% for(review of listing.reviews) {%>
                        <div class="card col-5 mb-3 ms-3">
                            <div class="card-body">
                                <h5 class="card-title">Random User</h5>
                                <p class="starability-result card-text" data-rating="<%=review.rating %>"></p>
                                <p class="card-text"><%=review.comment %></p>
                                <!-- <p class="card-text"><%=review.rating %> stars</p> -->
                                <form class="mb-3" method="post" action="/listings/<%=listing.id%>/reviews/<%=review._id %>?_method=DELETE"><button class="btn btn-dark mt-3">Delete</button></form>
                            </div>
                        </div>
                    <% } %>
                    </div>
            </div>
        </div>
    </body>